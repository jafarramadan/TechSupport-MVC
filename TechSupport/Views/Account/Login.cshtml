@model TechSupport.Models.Dto.LoginDto

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-center">
                    <h2 class="mb-0">Login</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="UserName" class="form-label"></label>
                            <input asp-for="UserName" class="form-control" placeholder="Enter your username" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <br /> <br /> <br />
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </div>
                    </form>
                    <div class="mt-3 text-center">
                        <a asp-action="Register">Don't have an account? Register</a>
                    </div>
                    <br /> <br /> <br /> <br /> <br /> 
                </div>
            </div>
        </div>
    </div>
</div>
